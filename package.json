{
  "name": "monorun",
  "version": "0.0.1",
  "description": "A monorepo build system for JavaScript and TypeScript projects.",
  "author": "HamzaKV <hamzakv333@gmail.com>",
  "license": "MIT",
  "main": "./bin/main",
  "bin": {
    "monorun": "./bin/main.js"
  },
  "scripts": {
    "clean": "rimraf ./dist",
    "copy-files": "copyfiles package.json ./dist",
    "dev": "tsx --no-cache ./bin/main",
    "start": "node ./dist/bin/main.js",
    "build": "bun run clean && tsc && bun run copy-files"
  },
  "type": "module",
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/graphlib": "^2.1.12",
    "@types/js-yaml": "^4.0.9",
    "@types/micromatch": "^4.0.9",
    "@types/node": "^22.15.17",
    "copyfiles": "^2.4.1",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.4"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "better-sqlite3": "^11.10.0",
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "fast-glob": "^3.3.3",
    "graphlib": "^2.1.8",
    "js-yaml": "^4.1.0",
    "micromatch": "^4.0.8",
    "minimatch": "^10.0.1",
    "ora": "^8.2.0"
  },
  "keywords": ["monorepo", "task runner", "build", "monorun"],
  "engines": {
    "node": ">=16"
  }
}
